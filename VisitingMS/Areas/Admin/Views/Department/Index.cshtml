@model IEnumerable<VisitingMS.Models.DepartmentModel>
<partial name="_Notification" />
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-5">Departments</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus"></i> Create New
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
                    <th>@Html.DisplayNameFor(model => model.HOD)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.HOD)</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
