@model VisitingMS.Models.DepartmentModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Delete Department</h1>

            <div class="bg-light p-3 text-center">
                <h3 class="mb-4">Are you sure you want to delete this?</h3>
            </div>
            <hr />

            <div>
                <h4>Department Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Department Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DepartmentName)</dd>
                    <dt class="col-sm-4">Head of Department</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HOD)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
